---
import HeaderLink from './HeaderLink.astro';
import { COMPANY } from '../consts';
---

<header>
  <nav>
    <div class="brand">
      <a href="/" aria-label="DigiON - Inicio">
        <span class="brand-digi">Digi</span><span class="brand-on">ON</span>
        <span class="brand-sub">Consultoría</span>
      </a>
    </div>

    <button class="menu-toggle" id="menuToggle" aria-label="Abrir menú" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class="nav-links" id="navLinks">
      <HeaderLink href="/">Inicio</HeaderLink>
      <div class="dropdown">
        <HeaderLink href="/servicios">Servicios</HeaderLink>
        <div class="dropdown-menu">
          <a href="/servicios/transformacion-digital">Transformación Digital</a>
          <a href="/servicios/proteccion-informacion">Protección de la Información</a>
          <a href="/servicios/formacion">Formación Empresarial</a>
          <a href="/servicios/subvenciones">Gestión de Subvenciones</a>
        </div>
      </div>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/nosotros">Nosotros</HeaderLink>
      <HeaderLink href="/contacto">Contacto</HeaderLink>
    </div>

    <div class="header-cta">
      <a href={`tel:${COMPANY.phone.replace(/\s/g, '')}`} class="phone-link" aria-label="Llamar a DigiON">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 12 19.79 19.79 0 0 1 1.61 3.18 2 2 0 0 1 3.6 1h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L7.91 8.6a16 16 0 0 0 5.48 5.48l1.32-1.31a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 21.5 15l.42 1.92z"></path>
        </svg>
        {COMPANY.phoneDisplay}
      </a>
      <a href="/contacto" class="btn-contact">Pedir cita</a>
    </div>
  </nav>
</header>

<script>
  const toggle = document.getElementById('menuToggle');
  const navLinks = document.getElementById('navLinks');
  toggle?.addEventListener('click', () => {
    const isOpen = navLinks?.classList.toggle('open');
    toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
  });
</script>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    margin: 0;
    padding: 0 1.5em;
    background: #fff;
    box-shadow: 0 2px 8px rgba(15, 18, 25, 8%);
  }

  nav {
    display: flex;
    align-items: center;
    gap: 1em;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0.75em 0;
  }

  /* Brand */
  .brand a {
    display: flex;
    align-items: baseline;
    gap: 0.2em;
    text-decoration: none;
  }

  .brand-digi {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e3a8a;
  }

  .brand-on {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a56db;
  }

  .brand-sub {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 400;
    margin-left: 0.25em;
  }

  /* Nav Links */
  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.25em;
    flex: 1;
    justify-content: center;
  }

  /* Dropdown */
  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 8px 24px rgba(15, 18, 25, 12%);
    min-width: 220px;
    padding: 0.5em 0;
    z-index: 200;
  }

  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.6em 1.25em;
    color: rgb(34, 41, 57);
    font-size: 0.9rem;
    text-decoration: none;
    transition: background 0.15s;
  }

  .dropdown-menu a:hover {
    background: #f0f4ff;
    color: #1a56db;
  }

  /* CTA area */
  .header-cta {
    display: flex;
    align-items: center;
    gap: 1em;
    flex-shrink: 0;
  }

  .phone-link {
    display: flex;
    align-items: center;
    gap: 0.4em;
    color: rgb(34, 41, 57);
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    white-space: nowrap;
  }

  .phone-link:hover {
    color: #1a56db;
  }

  .btn-contact {
    display: inline-block;
    padding: 0.5em 1.25em;
    background: #1a56db;
    color: #fff;
    border-radius: 6px;
    font-weight: 700;
    font-size: 0.9rem;
    text-decoration: none;
    white-space: nowrap;
    transition: background 0.2s;
  }

  .btn-contact:hover {
    background: #1e3a8a;
    text-decoration: none;
    color: #fff;
  }

  /* Hamburger */
  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5em;
    margin-left: auto;
  }

  .menu-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: rgb(34, 41, 57);
    border-radius: 2px;
    transition: all 0.2s;
  }

  @media (max-width: 900px) {
    .menu-toggle {
      display: flex;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #fff;
      flex-direction: column;
      align-items: flex-start;
      padding: 1em 1.5em;
      box-shadow: 0 8px 24px rgba(15, 18, 25, 12%);
      gap: 0;
    }

    .nav-links.open {
      display: flex;
    }

    .dropdown-menu {
      position: static;
      box-shadow: none;
      padding-left: 1em;
    }

    .dropdown:hover .dropdown-menu {
      display: none;
    }

    .dropdown.open .dropdown-menu {
      display: block;
    }

    .header-cta .btn-contact {
      display: none;
    }

    .phone-link span:last-child {
      display: none;
    }
  }

  @media (max-width: 600px) {
    .phone-link {
      display: none;
    }
  }
</style>
