<style>
  .contact-page { width: 100%; }

  .contact-hero {
    background: linear-gradient(135deg, #eff6ff, #f0f4ff);
    padding: 4em 1.5em;
    text-align: center;
  }

  .contact-hero-inner { max-width: 600px; margin: 0 auto; }

  .contact-hero h1 { font-size: 2.2em; margin-bottom: 0.5em; }

  .contact-hero p { color: #374151; font-size: 1.05rem; margin: 0; }

  .contact-section { padding: 4em 1.5em; }

  .contact-inner {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4em;
    max-width: 1100px;
    margin: 0 auto;
    align-items: start;
  }

  .contact-form-wrapper h2 { font-size: 1.6em; margin-bottom: 0.25em; }

  .contact-form-wrapper > p { color: #6b7280; font-size: 0.9rem; margin-bottom: 2em; }

  .contact-form { display: flex; flex-direction: column; gap: 0; }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25em;
  }

  .form-group {
    margin-bottom: 1.25em;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 0.4em;
    color: rgb(34, 41, 57);
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 0.7em 1em;
    border: 2px solid #e5e7eb;
    border-radius: 6px;
    font-size: 0.95rem;
    font-family: inherit;
    transition: border-color 0.2s;
    box-sizing: border-box;
    color: rgb(34, 41, 57);
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: #1a56db;
  }

  .form-group textarea { resize: vertical; min-height: 130px; }

  .checkbox-group { margin-bottom: 1.5em; }

  .checkbox-label {
    display: flex !important;
    align-items: flex-start;
    gap: 0.5em;
    font-weight: 400 !important;
    font-size: 0.875rem;
    color: #374151;
    cursor: pointer;
    line-height: 1.4;
  }

  .checkbox-label input { flex-shrink: 0; margin-top: 0.2em; }

  .checkbox-label a { color: #1a56db; }

  .btn-primary {
    display: inline-block;
    padding: 0.85em 2em;
    background: #1a56db;
    color: #fff;
    border-radius: 6px;
    font-weight: 700;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.2s;
  }

  .btn-primary:hover { background: #1e3a8a; }

  .btn-full { width: 100%; text-align: center; }

  /* Info side */
  .contact-info h2 { font-size: 1.6em; margin-bottom: 1.5em; }

  .info-card {
    background: #f8fafc;
    border-radius: 12px;
    padding: 1.75em;
    border: 1px solid #e5e7eb;
    margin-bottom: 1.5em;
  }

  .info-item {
    display: flex;
    gap: 1em;
    align-items: flex-start;
    padding-bottom: 1.25em;
    margin-bottom: 1.25em;
    border-bottom: 1px solid #e5e7eb;
  }

  .info-item:last-child {
    padding-bottom: 0;
    margin-bottom: 0;
    border-bottom: none;
  }

  .info-icon { font-size: 1.5rem; flex-shrink: 0; }

  .info-item strong { display: block; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em; color: #6b7280; margin-bottom: 0.25em; }

  .info-item p, .info-item address {
    font-size: 0.9rem;
    color: rgb(34, 41, 57);
    margin: 0;
    font-style: normal;
    line-height: 1.5;
  }

  .info-item a { color: #1a56db; text-decoration: none; }
  .info-item a:hover { text-decoration: underline; }

  .map-placeholder {
    background: #e5e7eb;
    border-radius: 12px;
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5em;
    overflow: hidden;
    border: 1px solid #d1d5db;
  }

  .map-inner {
    text-align: center;
    padding: 1em;
  }

  .map-pin { font-size: 2rem; margin-bottom: 0.5em; }

  .map-inner p { margin: 0; font-size: 0.875rem; color: #374151; }

  .map-address { color: #6b7280; }

  .map-link {
    display: inline-block;
    margin-top: 0.75em;
    color: #1a56db;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .service-areas h3 { font-size: 1rem; margin-bottom: 0.5em; }

  .service-areas p { font-size: 0.875rem; color: #374151; margin-bottom: 0.75em; }

  .areas-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
  }

  .areas-tags span {
    background: #eff6ff;
    color: #1e3a8a;
    padding: 0.25em 0.75em;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
    border: 1px solid #dbeafe;
  }

  @media (max-width: 900px) {
    .contact-inner { grid-template-columns: 1fr; gap: 3em; }
    .form-row { grid-template-columns: 1fr; }
  }

  @media (max-width: 480px) {
    .contact-hero h1 { font-size: 1.8em; }
  }
</style>
