---
import { COMPANY } from '../consts';
const today = new Date();
---

<footer>
  <div class="footer-inner">
    <!-- Brand & Description -->
    <div class="footer-brand">
      <div class="brand-logo">
        <span class="brand-digi">Digi</span><span class="brand-on">ON</span>
      </div>
      <p class="brand-tagline">{COMPANY.slogan}</p>
      <p class="brand-desc">
        Consultoría especializada en transformación digital, protección de la información,
        formación y subvenciones para pymes en Onda y Castellón.
      </p>
    </div>

    <!-- Services Links -->
    <div class="footer-col">
      <h3>Servicios</h3>
      <ul>
        <li><a href="/servicios/transformacion-digital">Transformación Digital</a></li>
        <li><a href="/servicios/proteccion-informacion">Protección de la Información</a></li>
        <li><a href="/servicios/formacion">Formación Empresarial</a></li>
        <li><a href="/servicios/subvenciones">Gestión de Subvenciones</a></li>
      </ul>
    </div>

    <!-- Company Links -->
    <div class="footer-col">
      <h3>Empresa</h3>
      <ul>
        <li><a href="/nosotros">Sobre Nosotros</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contacto">Contacto</a></li>
      </ul>
    </div>

    <!-- NAP (Name Address Phone) - Critical for Local SEO -->
    <div class="footer-col footer-nap">
      <h3>Contacto</h3>
      <address>
        <p>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
          {COMPANY.address.street}<br />
          {COMPANY.address.postalCode} {COMPANY.address.city},<br />
          {COMPANY.address.province}
        </p>
        <p>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 12 19.79 19.79 0 0 1 1.61 3.18 2 2 0 0 1 3.6 1h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L7.91 8.6a16 16 0 0 0 5.48 5.48l1.32-1.31a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 21.5 15l.42 1.92z"></path></svg>
          <a href={`tel:${COMPANY.phone.replace(/\s/g, '')}`}>{COMPANY.phoneDisplay}</a>
        </p>
        <p>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
          <a href={`mailto:${COMPANY.email}`}>{COMPANY.email}</a>
        </p>
        <p class="hours">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
          {COMPANY.hours[0].days}: {COMPANY.hours[0].hours}<br />
          {COMPANY.hours[1].days}: {COMPANY.hours[1].hours}
        </p>
      </address>
    </div>
  </div>

  <div class="footer-bottom">
    <p>
      &copy; {today.getFullYear()} {COMPANY.name} &mdash; {COMPANY.address.city}, {COMPANY.address.province}.
      Todos los derechos reservados.
    </p>
    <div class="legal-links">
      <a href="/legal/aviso-legal">Aviso Legal</a>
      <a href="/legal/privacidad">Política de Privacidad</a>
      <a href="/legal/cookies">Política de Cookies</a>
    </div>
  </div>
</footer>

<style>
  footer {
    background: #1e3a8a;
    color: #cbd5e1;
    margin-top: 4em;
  }

  .footer-inner {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 3em;
    max-width: 1100px;
    margin: 0 auto;
    padding: 4em 1.5em 3em;
  }

  /* Brand */
  .footer-brand .brand-logo {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5em;
  }

  .brand-digi { color: #93c5fd; }
  .brand-on { color: #60a5fa; }

  .brand-tagline {
    color: #93c5fd;
    font-weight: 700;
    margin: 0 0 0.75em 0;
    font-size: 0.95rem;
  }

  .brand-desc {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #94a3b8;
    margin: 0;
  }

  /* Columns */
  .footer-col h3 {
    color: #e2e8f0;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 1em;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-col ul li {
    margin-bottom: 0.6em;
  }

  .footer-col ul li a,
  .footer-nap address a {
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .footer-col ul li a:hover,
  .footer-nap address a:hover {
    color: #e2e8f0;
  }

  /* NAP */
  .footer-nap address {
    font-style: normal;
  }

  .footer-nap address p {
    display: flex;
    align-items: flex-start;
    gap: 0.6em;
    font-size: 0.875rem;
    color: #94a3b8;
    margin-bottom: 1em;
    line-height: 1.5;
  }

  .footer-nap address svg {
    flex-shrink: 0;
    margin-top: 0.2em;
    color: #60a5fa;
  }

  .hours {
    font-size: 0.8rem !important;
  }

  /* Bottom */
  .footer-bottom {
    border-top: 1px solid #2563eb;
    max-width: 1100px;
    margin: 0 auto;
    padding: 1.5em 1.5em;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1em;
    font-size: 0.8rem;
    color: #64748b;
  }

  .footer-bottom p {
    margin: 0;
  }

  .legal-links {
    display: flex;
    gap: 1.5em;
  }

  .legal-links a {
    color: #64748b;
    text-decoration: none;
    font-size: 0.8rem;
  }

  .legal-links a:hover {
    color: #94a3b8;
  }

  @media (max-width: 900px) {
    .footer-inner {
      grid-template-columns: 1fr 1fr;
      gap: 2em;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 600px) {
    .footer-inner {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .legal-links {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
